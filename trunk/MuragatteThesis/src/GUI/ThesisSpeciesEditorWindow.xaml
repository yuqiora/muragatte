<Window x:Class="Muragatte.Thesis.GUI.ThesisSpeciesEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xtk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Species Editor" ResizeMode="NoResize" SizeToContent="WidthAndHeight" ShowInTaskbar="False">
    <DockPanel>
        <ListBox Height="200" Name="lboSpecies" MinWidth="100" DockPanel.Dock="Left" Margin="5" ItemsSource="{Binding GetSpecies}" DisplayMemberPath="FullName" />
        <Button Content="Close" Height="23" Name="btnClose" Width="80" DockPanel.Dock="Bottom" Margin="5" Click="btnClose_Click" />
        <StackPanel Margin="5">
            <Button Content="New" Height="23" Name="btnNew" Width="80" Click="btnNew_Click" />
            <Button Content="Sub" Height="23" Name="btnSub" Width="80" Click="btnSub_Click" />
            <Button Content="Delete" Height="23" Name="btnDelete" Width="80" Click="btnDelete_Click" />
            <xtk:WatermarkTextBox Name="txtName" Watermark="Name" Width="120" Height="23" Margin="0,10,0,0" Text="{Binding Path=SelectedValue.Name, ElementName=lboSpecies}" />
        </StackPanel>
    </DockPanel>
</Window>
