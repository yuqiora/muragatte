<Window x:Class="Muragatte.GUI.VisualPlaybackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xtk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Visualization Playback" ResizeMode="CanMinimize" SizeToContent="WidthAndHeight">
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Play" Height="23" Margin="0,0,0,0" Name="btnPlay" Width="75" Click="btnPlay_Click" />
            <Button Content="Pause" Height="23" Margin="6,0,0,0" Name="btnPause" Width="75" Click="btnPause_Click" />
            <Button Content="First" Height="23" Margin="6,0,0,0" Name="btnFirst" Width="75" Click="btnFirst_Click" />
            <Button Content="Last" Height="23" Margin="6,0,0,0" Name="btnLast" Width="75" Click="btnLast_Click" />
        </StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Column="0" HorizontalAlignment="Center">
                <Label Content="_Delay (ms):" Height="28" Name="lblDelay" Target="{Binding ElementName=iudDelay}" />
                <xtk:IntegerUpDown Name="iudDelay" Width="60" Height="23" Minimum="1" Maximum="1000" ValueChanged="iudDelay_ValueChanged" />
            </StackPanel>
            <CheckBox Content="_Automatic delay" Height="16" Name="chbAutoDelay" Grid.Column="1" HorizontalAlignment="Center" Checked="chbAutoDelay_Checked" Unchecked="chbAutoDelay_Unchecked" />
        </Grid>
        <Grid Margin="0,6,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Column="0" HorizontalAlignment="Center">
                <Label Content="_Frame" Height="28" Name="lblFrame" Target="{Binding ElementName=dudFrame}" />
                <xtk:DoubleUpDown Name="dudFrame" Height="23" Width="60" Minimum="0" Text="F0" Value="{Binding Path=Value, ElementName=sldFrame, Mode=TwoWay, IsAsync=True, UpdateSourceTrigger=PropertyChanged}" />
                <Label Content="of" Height="28" Name="lblFrameOf" />
                <Label Content="0" Height="28" Name="lblFrameCount" />
            </StackPanel>
            <CheckBox Content="_Skip substeps" Height="16" Name="chbSkipSubsteps" Grid.Column="1" HorizontalAlignment="Center" Checked="chbSkipSubsteps_Checked" Unchecked="chbSkipSubsteps_Unchecked" />
        </Grid>
        <Slider Height="23" HorizontalAlignment="Center" Name="sldFrame" Width="320" TickPlacement="None" IsMoveToPointEnabled="True" LargeChange="10" SmallChange="1" TickFrequency="1" ValueChanged="sldFrame_ValueChanged" IsSnapToTickEnabled="True" />
    </StackPanel>
</Window>
